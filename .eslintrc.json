{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-var": ["error"],
        "quotes": ["error", "double"],
        "linebreak-style": ["error", "windows"]
    },
    "ignorePatterns": ["webpack.config.js", "postcss.config.js"]
}
